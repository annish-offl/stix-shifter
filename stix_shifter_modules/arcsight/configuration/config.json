{
    "connection": {
        "type": {
            "displayName": "MicroFocus ArcSight Logger"
        },
        "host": {
            "type": "text"
        },
        "port": {
            "type": "number",
            "default": 443
        },
        "help": {
            "type": "link",
            "default": "<Help URL>"
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        }
    },
    "configuration": {
        "type" : "fields",
        "auth": {
            "login": {
                "type": "password"
            },
            "password": {
                "type": "password"
            }
        }
    }
}